{
  "multipart": [
	{ "when": { "facing":"north" },
      "apply": { "model": "relics:block/sword_pedestal_oot" }
    },
	{ "when": { "facing":"east" },
      "apply": { "model": "relics:block/sword_pedestal_oot", "y": 90 }
    },
	{ "when": { "facing":"south" },
      "apply": { "model": "relics:block/sword_pedestal_oot", "y": 180 }
    },
    { "when": { "facing":"west" },
      "apply": { "model": "relics:block/sword_pedestal_oot", "y": 270 }
    }, 
    { "when": { "OR": [ {"sword":"true", "facing":"north" }, {"sword":"true", "facing":"south" }]},
      "apply": { "model": "relics:block/pedestal_glow_oot" }
    },
    { "when": { "OR": [ {"sword":"true", "facing":"east" }, {"sword":"true", "facing":"west" }]},
      "apply": { "model": "relics:block/pedestal_glow_oot", "y": 90 }
    } 
  ]
}