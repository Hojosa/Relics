{
  "multipart": [
	{ "when": { "facing":"north" },
      "apply": { "model": "relics:block/sword_pedestal_normal" }
    },
	{ "when": { "facing":"east" },
      "apply": { "model": "relics:block/sword_pedestal_normal", "y": 90 }
    },
	{ "when": { "facing":"south" },
      "apply": { "model": "relics:block/sword_pedestal_normal", "y": 180 }
    },
    { "when": { "facing":"west" },
      "apply": { "model": "relics:block/sword_pedestal_normal", "y": 270 }
    }, 
    { "when": { "OR": [ {"repair":"true", "facing":"north", "lit":"false" }, {"repair":"true", "facing":"south", "lit":"false" }]},
      "apply": { "model": "relics:block/pedestal_glow_normal" }
    },
    { "when": { "OR": [ {"repair":"true", "facing":"east", "lit":"false" }, {"repair":"true", "facing":"west", "lit":"false" }]},
      "apply": { "model": "relics:block/pedestal_glow_normal", "y": 90 }
    },
    { "when": { "OR": [ {"lit":"true", "facing":"north", "sword":"true" }, {"lit":"true", "facing":"south", "sword":"true" }]},
      "apply": { "model": "relics:block/pedestal_glow_normal" }
    },
    { "when": { "OR": [ {"lit":"true", "facing":"east", "sword":"true" }, {"lit":"true", "facing":"west", "sword":"true" }]},
      "apply": { "model": "relics:block/pedestal_glow_normal", "y": 90 }
    }
  ]
}
